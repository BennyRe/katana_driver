<launch>
  <!-- send katana urdf to param server -->
  <param name="robot_description" command="$(find xacro)/xacro.py '$(find katana_description)/urdf/katana.urdf.xacro'" />

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find katana_description)/rviz/katana_description.vcg" />
  
  <rosparam command="load" file="$(find katana_description)/launch/dependent_joints.yaml" />

	<node pkg="robot_state_publisher" type="state_publisher" name="robot_state_publisher" />

  <param name="use_gui" value="true" />
  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher"/>
</launch>


<launch>
  <!-- load katana urdf -->
  <include file="$(find katana_description)/launch/upload_katana.launch" />

  <!-- robot state publisher -->
  <node pkg="robot_state_publisher" type="state_publisher" name="robot_state_publisher" />

  <!-- katana node -->
  <node pkg="katana" type="katana" name="katana">
    <param name="simulation" value="true" />
    <param name="publish_kni_tcp_frame" value="true" />
    <rosparam command="load" file="$(find katana)/config/katana_arm_controllers.yaml" />
  </node>
</launch>

